<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ToolTip">
        <Setter Property="Padding" Value="14 10" />
        <Setter Property="FontFamily" Value="{StaticResource UIFont}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
        <Setter Property="Background" Value="{DynamicResource Primary100}" />
        <Setter Property="Foreground" Value="{DynamicResource Primary800}" />
        <Setter Property="Template">
            <Setter.Value>
                
                <ControlTemplate TargetType="ToolTip">
                    
                    <Grid Margin="0">

                        <Border Margin="5" CornerRadius="5" Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect Opacity=".3" BlurRadius="5" ShadowDepth="2" Direction="225"/>
                            </Border.Effect>
                        </Border>
                        
                        <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        
                    </Grid>
                    
                </ControlTemplate>
                
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>