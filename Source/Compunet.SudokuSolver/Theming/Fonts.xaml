<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:system="clr-namespace:System;assembly=netstandard">

    <FontFamily x:Key="OpenSans">pack://application;,,,/#Open Sans</FontFamily>
    <FontFamily x:Key="Rubik">pack://application;,,,/#Rubik</FontFamily>

    <!--<FontFamily x:Key="UIFont">pack://application;,,,/#Open Sans</FontFamily>-->

    <FontWeight x:Key="FontWeightLight">Light</FontWeight>
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>

    <!-- Rubik Sizes -->
    <FontFamily x:Key="UIFont">pack://application;,,,/#Rubik</FontFamily>
    <system:Double x:Key="FontSizeSmall">15.5</system:Double>
    <system:Double x:Key="FontSizeRegular">17</system:Double>
    <system:Double x:Key="FontSizeMedium">18</system:Double>
    <system:Double x:Key="FontSizeLarge">22</system:Double>
    <system:Double x:Key="FontSizeLarger">36</system:Double>

